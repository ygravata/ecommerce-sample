<div style="height:67vh;">

  <div class="d-flex">
    <div class="text-left" style="padding-left: 5%; padding-top: 10%;">
      <%= image_tag @product.image_url, size: "280x280",
              src: 'Image Not Found',
              onerror: 'this.error=null;this.src="https://i.pinimg.com/originals/b2/a1/81/b2a1819f5aae2d868b410e1aff64bf29.jpg"', style: "border-radius: 8px;" %>
    </div>

    <div class="ml-5" style="padding-left: 5%; padding-top: 10%; width: 60%;">
      <h2><%= @product.name %></h2>
      <p>Brand: <%= @product.brand %></p>
      <p>Category: <%= @product.category %></p>
      <p>Suited for: <%= @product.for %>.</p>
      <p><%= @product.desc1 %></p>
      <p>R$ <%= number_with_precision(@product.price, precision: 2) %></p>

          <%= link_to add_to_cart_product_path(@product),method: :patch, class:"btn", style:"color:white; background-color:#72B8DB;" do %>
            Add to cart <i class="fas fa-cart-plus"></i>
          <% end %>



    </div>
  </div>

</div>

<div class="" style="padding-bottom: 5%; padding-left: 5%; padding-top: 10%; width: 86%;">
  <h2>Complete description:</h2>

  <p><%= @product.desc2 %></p>

</div>

