<div style="text-align:right;" >
  <%= link_to "", destroy_user_session_path, class: "fas fa-sign-out-alt logout-icon", method: :delete %>
</div>

<div class="gravata-container">
  <div class="sales-heading">
    <h2 class="heading-title">Products Management</h2>
    <h2>Accumulated total gross income: <span class="total-sales-highlight">R$ %></span></h2>
    <div class="d-flex">
      <h2 class="last-input-heading pr-2">Your last input gross income: <span class="input-sales-highlight">R$ %></span></h2>
      <% if !@user_last_input.nil? && policy(@user_last_input).destroy? %>
        <%= link_to @user_last_input, method: :delete, data: { confirm: 'Are you sure?'} do %>
          <i class="fas fa-trash-alt pt-1" style="font-size: 22px; color:white;"></i>
          <% end %>
      <% end %>
    </div>
  </div>

  <div class="input-file">
  </div>

  <table class="table table-dark table-style">
    <thead>
      <tr>
        <th scope="col">Item NÂº</th>
        <th scope="col">Date of input</th>
        <th scope="col">Name</th>
        <th scope="col">Brand</th>
        <th scope="col">Category</th>
        <th scope="col">Price</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <th scope="row"><%= product.created_at.strftime("%d/%m") %></th>
            <td><%= product.name %></td>
            <td><%= product.brand %></td>
            <td><%= product.category %></td>
            <td>R$ <%= number_with_precision(product.price, precision: 2) %> </td>
            <td>
              <% if product.user == current_user %>
                <%= link_to products_path, method: :delete, data: { confirm: 'Are you sure?'} do %>
                  <i class="fas fa-trash-alt pt-1" style="font-size: 18px; color:white;"></i>
                <% end %>
              <% end %>
            </td>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>


<%= form_for :upload, :url => {:action=>:upload}, :html=>{:multipart=>true} do |f| %>
  <%= f.file_field :file %>
  <%= f.submit 'Upload' %>
<% end %>
